<p id="notice"><%= notice %></p>

<h1>Households</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Log</th>
      <th>Date of residency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @households.each do |household| %>
      <tr>
        <td><%= household.name %></td>
        <td><%= household.address %></td>
        <td><%= household.phone %></td>
        <td><%= household.log %></td>
        <td><%= household.date_of_residency %></td>
        <td><%= link_to 'Show', household %></td>
        <td><%= link_to 'Edit', edit_household_path(household) %></td>
        <td><%= link_to 'Destroy', household, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

